{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-native/all",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "react-native/react-native": true,
    "jest": true,
    "node": true,
    "es2021": true
  },
  "plugins": [
    "react",
    "react-native",
    "jest"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "indent": ["warn", 2],
    "react/jsx-key": "warn",                       // baisse la sévérité (évite des erreurs bloquantes)
    "react-native/no-color-literals": "off",       // coupe les erreurs sur les couleurs inline
    "react-native/no-unused-styles": "warn",       // passe en warning (fort antipattern, mais bruyant)
    "react-native/no-raw-text": "off",             // coupe les erreurs sur texte brut hors <Text>

    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/display-name": "off",
    "react-native/no-inline-styles": "off",
    "react-native/sort-styles": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "prefer-const": "warn",
    "no-var": "warn",
    "eqeqeq": ["warn", "smart"],
    "curly": ["warn", "multi-line"]
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.js",
        "**/*.test.js",
        "**/*.spec.js"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "no-unused-vars": [
          "warn",
          {
            "argsIgnorePattern": "^_"
          }
        ]
      }
    }
  ]
}
