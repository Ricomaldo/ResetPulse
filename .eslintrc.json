{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-native/all",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "react-native/react-native": true,
    "jest": true,
    "node": true,
    "es2021": true
  },
  "plugins": [
    "react",
    "react-native",
    "jest"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "warn",
    "react/display-name": "warn",
    "react-native/no-inline-styles": "warn",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "prefer-const": "warn",
    "no-var": "warn",
    "eqeqeq": [
      "warn",
      "always"
    ],
    "curly": [
      "warn",
      "all"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "indent": [
      "warn",
      2
    ]
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.js",
        "**/*.test.js",
        "**/*.spec.js"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "no-unused-vars": [
          "warn",
          {
            "argsIgnorePattern": "^_"
          }
        ]
      }
    }
  ]
}
